<!DOCTYPE html>
<html>
  <head>
    <title>らくごらいふ</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="css/bootstrap.css" rel="stylesheet">
  </head>
  <body>
    <header>
      <div class="bs-component">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar-collapse">
                <span class="sr-only">らくごらいふ</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">らくごらいふ</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "あまらくさん", users_path %></li>
                <li><%= link_to "みんなのネタ", netas_path %></li>
              <% if logged_in? %>
                <li><%= link_to "ネタを記録する", new_neta_path %></li>
                <li><%= link_to "マイページ", user_path(current_user.id) %></li>
                <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
              <% else %>
                <li><%= link_to "アカウント登録", new_user_path %></li>
                <li><%= link_to "ログイン", new_session_path %></li>
              <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <div class="container">
      <div class="contents">
        <%= yield %>
      </div>
    </div>
    <footer>
      <div class="footer">
        <p class="copyright text-muted">Copyright &copy; らくごらいふ 2018</p>
      </div>
    </footer>
  </body>
</html>
