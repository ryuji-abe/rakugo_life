<div class="row">
  <div class="alert-text">
    <p class="alert-info"><%= notice %></p>
    <p class="alert-danger"><%= danger %></p>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="bs-component">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="title">らくごらいふ ログイン</div>
          <%= form_with(scope: :session, url: sessions_path, class: 'form-horizontal') do |f| %>
            <fieldset>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                  <%= f.submit "ログイン", class:'btn btn-block btn-primary' %>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="bs-component">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-sm-10 col-sm-offset-1">
            アカウントをお持ちでないですか？<%= link_to "登録する", new_user_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
