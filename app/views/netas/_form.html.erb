<% if @neta.errors.any? %>
<div class="field row">
  <div class="col-sm-offset-3 col-sm-6">
    <div id="error_explanation">
      <ul>
        <% @neta.errors.full_messages.each do |msg| %>
          <li class="error-msg"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>
<%= form_with(model: @neta, local: true, url: choose_new_or_edit, class: 'form-horizontal') do |form| %>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="bs-component">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= form.label :neta_name %>
            </div>
            <div class="col-sm-10 col-sm-offset-1">
              <%= form.text_field :neta_name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= form.label :source %>
            </div>
            <div class="col-sm-10 col-sm-offset-1">
              <%= form.text_field :source, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= form.label :impression %>
            </div>
            <div class="col-sm-10 col-sm-offset-1">
              <%= form.text_area :impression, class: 'form-control', placeholder: 'ネタに取り組んでみての感想を自由にお書きください。' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= form.submit "記録する", class:'btn btn-block btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
