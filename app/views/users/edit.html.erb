<% if @user.errors.any? %>
<div class="field row">
  <div class="col-sm-offset-3 col-sm-6">
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="error-msg"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>
<%= form_with(model: @user, local: true, class: 'form-horizontal') do |form| %>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="bs-component">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="title">らくごらいふ プロフィール編集</div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.label :name %>
              </div>
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.text_field :name, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.label :image %>
              </div>
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.file_field :image, id: :feed_image %>
                <%= form.hidden_field :image_cache %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.radio_button :sex, :male %> 男性
                <%= form.radio_button :sex, :female %> 女性
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.label :age %>
              </div>
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.select :age, User.age.options %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.label :year_of_experience %>
              </div>
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.text_field :year_of_experience, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.label :favorite_rakugoka %>
              </div>
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.text_field :favorite_rakugoka, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= form.submit "更新する", class: 'btn btn-block btn-primary' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= link_to "もどる", :back, class:'btn btn-block btn-default' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
