<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <ul class="row">
        <% @user.errors.full_messages.each do |message| %>
          <li class="error-msg"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="bs-component">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="title">らくごらいふ アカウント登録</div>
          <%= form_with(model: @user, local: true, class: 'form-horizontal') do |f| %>
          <fieldset>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= f.text_field :name, class: 'form-control', placeholder: '高座名' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '確認用パスワード' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-1">
                <%= f.submit "登録する", class:'btn btn-block btn-primary' %>
              </div>
            </div>
          </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="bs-component">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-sm-10 col-sm-offset-1">
            アカウントをお持ちですか？<%= link_to "ログインする", new_session_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
