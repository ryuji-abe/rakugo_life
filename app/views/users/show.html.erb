C<div class="contents">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div>
        <%= @user.name %> さんのページ
      </div>
      <% if @user.id == current_user.id %>
      <div>
        メールアドレス : <%= @user.email %>
      </div>
      <% end %>
      <div>
        アイコン画像 : <%= image_tag @user.image %>
      </div>
      <div>
        性別 : <%= @user.sex %>
      </div>
      <div>
        年齢 : <%= @user.age %>
      </div>
      <div>
        落語歴 : <%= @user.year_of_experience %> 年
      </div>
      <div>
        好きな噺家 : <%= @user.favorite_rakugoka %>
      </div>
    </div>
    <% if @user.id == current_user.id %>
    <div>
      <%= link_to "プロフィール編集", edit_user_path(@user.id), class:'btn btn-default', data: { confirm: '本当に編集していいですか？' } %>
    </div>
    <div>
        <%= link_to '退会する', user_path(user_id: @user.id), method: :delete, class: 'btn btn-danger', data: { confirm: '本当に退会しますか？' } %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div>
        <h4>持ちネタ一覧</h4>
      </div>
    </div>
  </div>
  <% @netas.each do |neta| %>
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div>
        <%= neta.neta_name %>
      </div>
      <div>
        <%= neta.source %>
      </div>
      <div>
        <%= simple_format(neta.impression) %>
      </div>
      <% if neta.user_id == current_user.id %>
      <div>
        <%= link_to "編集", edit_neta_path(neta.id), class:'btn btn-default', data: { confirm: '本当に編集していいですか？' } %>
      </div>
      <div>
        <%= link_to '削除', neta_path(neta.id), class:'btn btn-default', method: :delete, data: { confirm: '本当に削除していいですか？' } %>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div>
        <h4>お気に入り一覧</h4>
      </div>
    </div>
  </div>
  <% @favorites_netas.each do |neta| %>
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div>
        <%= neta.user.name %> さん
      </div>
      <div>
        <%= neta.neta_name %>
      </div>
    </div>
  </div>
  <% end %>
</div>
